<Application
    x:Class="MyDiary.UI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyDiary.UI"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://FzLib.Avalonia/Converters/Converters.axaml" />
                <ResourceInclude Source="avares://MyDiary.UI/Styles/Icons.axaml" />
                <ResourceInclude Source="avares://MyDiary.UI/Styles/Brushes.axaml" />
                <ResourceInclude Source="avares://MyDiary.UI/Styles/ControlStyles.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--<FontFamily x:Key="ContentControlThemeFontFamily">avares://MyDiary.UI/Assets/FZXBS.TTF#FZXiaoBiaoSong-B05S</FontFamily>-->
            <FontFamily x:Key="ContentControlThemeFontFamily">avares://MyDiary.UI/Assets#Microsoft YaHei</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>