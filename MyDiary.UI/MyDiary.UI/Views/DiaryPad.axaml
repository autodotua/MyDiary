<UserControl
    x:Class="MyDiary.UI.Views.DiaryPad"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dde="using:MyDiary.UI.Views.DiaryDocElement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="using:System"
    xmlns:v="using:MyDiary.UI.Views"
    xmlns:vm="using:MyDiary.UI.ViewModels"
    x:Name="pad"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:DiaryPadVM"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:DiaryPadVM />
    </Design.DataContext>
    <Grid
        Margin="4"
        RowDefinitions="Auto,8,Auto,4,*">
        <v:EditBar x:Name="editBar" />
        <TextBlock
            Grid.Row="2"
            Margin="16"
            FontSize="20"
            FontWeight="Bold"
            Text="{Binding #pad.SelectedDate, StringFormat=yyyy-MM-dd}" />
        <ScrollViewer
            Grid.Row="4"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel
                x:Name="stkBody"
                Margin="4,4,16,4"
                Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</UserControl>
