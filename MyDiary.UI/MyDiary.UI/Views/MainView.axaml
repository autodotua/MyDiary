<UserControl
    x:Class="MyDiary.UI.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:MyDiary.UI.Views"
    xmlns:vm="using:MyDiary.UI.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewVM"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewVM />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto,0,*">
        <v:DiaryDatePicker x:Name="datePicker" />
        <v:DiaryPad
            Grid.Column="2"
            SelectedDate="{Binding #datePicker.SelectedDate}" />
    </Grid>
</UserControl>
